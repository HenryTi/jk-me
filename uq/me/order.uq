ENUM OrderType ( 
	Customer 		= 01,
	Distributor 	= 11,
	Branch 			= 21,
);

ID #OrderMain ver 0.5 GLOBAL (
	id,
	KEY no,
    webUser ID,                         -- 下单user注册账号
	customerAccount ID,                 -- customerAccount
	seller ID,
	type ENUM OrderType DEFAULT OrderType.Customer,
    currency ID,
	sumAmount DEC(18,4),	            -- 订单总金额。各行金额
	stamp INT,
    sys (create),
);

ID #OrderDetail ver 0.5 GLOBAL (
	id,
	main ID OrderMain,
	item ID,
	product ID,
	quantity DEC(18,4),
	amount DEC(18,4),
	price DEC(18,4),                            -- 实际成交价
);

